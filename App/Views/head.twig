<!DOCTYPE html>
<html lang="{{ sitedata.lang | default('en') }}">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {% if sitedata.shortcuticon is defined %}
        <link rel="shortcut icon" href="{{ sitedata.shortcuticon }}" type="image/x-icon">
    {% endif %}
    {% if metaData.post_author.author.author_name is defined %}
        <meta name="author" content="{{ metaData.post_author.author.author_name }}">
    {% endif %}
    {% if metaData.post_intro is defined  %}
        <meta name="description" content="{{ metaData.post_intro }}">
    {% elseif sitedescription is defined %}
        <meta name="description" content="{{ sitedescription }}">
    {% endif %}
    {% if metaData.post_title is defined  %}
        <meta name="og:title" content="{{ metaData.post_title }}">
    {% elseif sitedata.sitename is defined %}
        <meta name="og:title" content="{{ sitedata.sitename }}">
    {% endif %}
    {% if metaData.post_type is defined %}
        <meta property="og:type" content="{{ metaData.post_type }}"/>
    {% elseif sitedata.sitetype is defined %}
        <meta property="og:type" content="{{ sitedata.sitetype }}"/>
    {% endif %}
    {% if metaData.post_square_image is defined  %}
        <meta name="og:image" content="{{ metaData.post_square_image }}">
    {% elseif sitedata.siteimage is defined %}
        <meta property="og:image" content="{{ sitedata.siteimage }}"/>
    {% endif %}
    {% if url is defined %}
        <meta property="og:url" content="{{ url }}"/>
    {% endif %}
    {% if metaData.post_intro is defined %}
        <meta property="og:description" content="{{ metaData.post_intro }}"/>
    {% elseif sitedata.sitedescription is defined %}
        <meta property="og:description" content="{{ sitedata.sitedescription }}"/>
    {% endif %}
    {% if url is defined %}
        <meta name="twitter:card" content="summary">
        <meta name="twitter:url" content="{{ url }}">
    {% endif %}
    {% if metaData.post_title is defined  %}
        <meta name="twitter:title" content="{{ metaData.post_title }}">
    {% elseif sitedata.sitename is defined %}
        <meta name="twitter:title" content="{{ sitedata.sitename }}">
    {% endif %}
    {% if metaData.post_intro is defined %}
        <meta property="twitter:description" content="{{ metaData.post_intro }}"/>
    {% elseif sitedata.sitedescription is defined %}
        <meta property="twitter:description" content="{{ sitedata.sitedescription }}"/>
    {% endif %}
    {% if metaData.post_square_image is defined  %}
        <meta name="twitter:image" content="{{ metaData.post_square_image }}">
    {% elseif sitedata.siteimage is defined %}
        <meta property="twitter:image" content="{{ sitedata.siteimage }}"/>
    {% endif %}

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
    <!-- Custom Fonts -->
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">


    <!-- Theme CSS -->
    {% if theme.css is defined %}
        {% for c in theme.css %}
            {{ c|raw }}
        {% endfor %}
    {% endif %}

    {% block head %}{% endblock %}

    {% if schema is defined %}
        {{ schema|raw }}
    {% endif %}

    {% if title is defined %}
        <title>{% block title %}
                {% if metaData.post_title is defined %}
                    {{ metaData.post_title }}
                {% elseif sitedata.sitename is defined %}
                    {{ sitedata.sitename }}
                {% endif %}
            {% endblock %}</title>
    {% endif %}
</head>